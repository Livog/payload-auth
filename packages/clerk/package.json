{
  "name": "@payload-auth/clerk",
  "scope": "payload-auth",
  "description": "A Payload CMS plugin for Clerk",
  "version": "1.0.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    },
    "./plugin": {
      "import": "./dist/plugin/index.js",
      "types": "./dist/plugin/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/index.d.ts"
      ],
      "types": [
        "dist/types.d.ts"
      ],
      "plugin": [
        "dist/plugin/index.d.ts"
      ]
    }
  },
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./tsconfig.tsbuildinfo",
    "build": "pnpm clean && pnpm copyfiles && pnpm build:types && pnpm build:swc",
    "copyfiles": "copyfiles -u 1 \"src/plugin/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,json}\" dist",
    "build:types": "tsc --project tsconfig.json",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
    "lint": "eslint",
    "lint:fix": "eslint ./src --fix",
    "test": "jest"
  },
  "keywords": [
    "payload-cms",
    "clerk",
    "plugin",
    "authentication",
    "payload-plugin"
  ],
  "author": "Forrest Devs <luke.gannon@me.com>",
  "license": "MIT",
  "devDependencies": {
    "@swc-node/register": "1.10.9",
    "@swc/cli": "0.6.0",
    "@swc/core": "1.11.8",
    "@swc/jest": "^0.2.37",
    "@types/jest": "29.5.12",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.12",
    "copyfiles": "^2.4.1",
    "payload": "^3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@clerk/backend": "^1.25.8",
    "@clerk/nextjs": "^6.12.12",
    "@clerk/types": "^4.50.1",
    "@payloadcms/ui": "~3.31.0",
    "next": "^15.2.4",
    "svix": "^1.62.0"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "registry": "https://registry.npmjs.org/",
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
